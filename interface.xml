				</Texture>
				<Texture parentKey="BottomBorder" file="Interface\QuestionFrame\Question-HTile" horizTile="true">
					<Size x="256" y="86"/>
					<Anchors>
						<Anchor point="BOTTOMLEFT" relativeKey="$parent.BorderBottomLeft" relativePoint="BOTTOMRIGHT"
								y="2"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.BorderBottomRight" relativePoint="BOTTOMLEFT"
								y="2"/>
					</Anchors>
					<TexCoords left="0.00000000" right="1.00000000" top="0.17187500" bottom="0.33984375"/>
				</Texture>
				<Texture parentKey="TopBorder" file="Interface\QuestionFrame\Question-HTile" horizTile="true">
					<Size x="256" y="91"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.BorderTopLeft" relativePoint="TOPRIGHT" y="-1"/>
						<Anchor point="TOPRIGHT" relativeKey="$parent.BorderTopRight" relativePoint="TOPLEFT" y="-1"/>
					</Anchors>
					<TexCoords left="0.00000000" right="1.00000000" top="0.34375000" bottom="0.52148438"/>
				</Texture>
			</Layer>
			<Layer level="BACKGROUND">
				<Texture parentKey="bTile" file="Interface\QuestionFrame\question-background" vertTile="true" horizTile="true">
					<Anchors>
						<Anchor point="TOPLEFT" x="20" y="-20"/>
						<Anchor point="BOTTOMRIGHT" x="-20" y="20"/>
					</Anchors>
				</Texture>
				<Texture parentKey="bNotTile" file="Interface\QuestionFrame\question-background" hidden="true">
					<Anchors>
						<Anchor point="TOPLEFT" x="20" y="-20"/>
						<Anchor point="BOTTOMRIGHT" x="-20" y="20"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Anchors>
			<Anchor point="CENTER" x="0" y="0"/>
		</Anchors>
	</Frame>

	<!--MainFrame-->
	<Frame name="mainframe" inherits="QuestionBordersFrame" parent="UIParent" hidden="false">
		<Scripts>
			<OnLoad function="initframe" />
		</Scripts>

		<Size>
			<RelDimension x="0.6" y="0.4" />
		</Size>
		<Anchors>
			<Anchor point="CENTER">
				<Offset>
					<AbsDimension x = "0" y = "0" />
				</Offset>
			</Anchor>
		</Anchors>



		<!--BoxWithInfo-->
		<Frames>

		<Texture name="MyTexture" file="Interface\AddOns\NMOTD\images\ramka">
			<Size>
		  		<AbsDimension x="13" y="13"/>
			</Size>
			<Anchors>
		  		<Anchor point="TOP">
			    	<Offset>
			      		<AbsDimension x="0" y="0"/>
			    	</Offset>
		  		</Anchor>
			</Anchors>
			<TexCoords left="0.398" right="0.445" top="0.402" bottom="0.449"/>
		</Texture>
			<Frame name="BoxWithInfoOne">
				<Size>
					<RelDimension x="0.22" y="0.15" />
				</Size>

				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x = "30" y = "-50" />
						</Offset>
					</Anchor>
				</Anchors>

				<backdrop bgFile="Interface\AddOns\NMOTD\images\magkhar"> <!-- Setting material for background and edge -->
					<BackgroundInsets>
						<AbsInset left="5" right="5" top="5" bottom="5"/> <!-- Moving background -->
					</BackgroundInsets>
				</backdrop>

				<Frames>
				    <ScrollFrame name="Text_Scroll">
				        <Anchors>
				            <Anchor point="TOPLEFT" x="12" y="-130"/>
				                <Anchor point="BOTTOMRIGHT" x="-22" y="10"/>
				            </Anchors>
				            <ScrollChild>
				                <Frame>
					                <Size x="10" y="-10"/>
					                <Frames>
					                    <SimpleHTML name="Text_Scroll_Content_One">
					                        <Size>
												<RelDimension x="0.2" y="0.009" />
											</Size>
					                        <Anchors>
					                            <Anchor point="TOPLEFT" x="0" y="-5"/>
					                        </Anchors>
					                    </SimpleHTML>
					                </Frames>
				                </Frame>
				            </ScrollChild>
				    </ScrollFrame>
		        </Frames>
			</Frame>

			<Frame name="BoxWithInfoTwo">
				<Size>
					<RelDimension x="0.22" y="0.15" />
				</Size>

				<Anchors>
					<Anchor point="BOTTOMLEFT">
						<Offset>
							<AbsDimension x = "30" y = "50" />
						</Offset>
					</Anchor>
				</Anchors>

				<backdrop bgFile="Interface\AddOns\NMOTD\images\irwin"> <!-- Setting material for background and edge -->
					<BackgroundInsets>
						<AbsInset left="5" right="5" top="5" bottom="5"/> <!-- Moving background -->
					</BackgroundInsets>
				</backdrop>

				<Frames>
				    <ScrollFrame name="Text_Scroll">
				        <Anchors>
				            <Anchor point="TOPLEFT" x="12" y="-130"/>
				                <Anchor point="BOTTOMRIGHT" x="-22" y="10"/>
				            </Anchors>
				            <ScrollChild>
				                <Frame>
					                <Size x="10" y="10"/>
					                <Frames>
					                    <SimpleHTML name="Text_Scroll_Content_Two">
					                        <Size>
												<RelDimension x="0.2" y="0.009" />
											</Size>
					                        <Anchors>
					                            <Anchor point="TOPLEFT" x="0" y="-5"/>
					                        </Anchors>
					                    </SimpleHTML>
					                </Frames>
				                </Frame>
				            </ScrollChild>
				    </ScrollFrame>
		        </Frames>
			</Frame>

			<Frame name="BoxWithInfoThree">
				<Size>
					<RelDimension x="0.33" y="0.33" />
				</Size>

				<Anchors>
					<Anchor point="RIGHT">
						<Offset name="Offsetsize">
							<AbsDimension x = "-40" y = "25" />
						</Offset>
					</Anchor>
				</Anchors>

				<backdrop bgFile="Interface\AddOns\NMOTD\images\danath"> <!-- Setting material for background and edge -->
					<BackgroundInsets>
						<AbsInset left="5" right="5" top="5" bottom="5"/> <!-- Moving background -->
					</BackgroundInsets>
				</backdrop>

				<Frames>
				    <ScrollFrame name="Text_Scroll">
				        <Anchors>
				            <Anchor point="TOPLEFT" x="12" y="-350"/>
				                <Anchor point="BOTTOMRIGHT" x="-22" y="20"/>
				            </Anchors>
				            <ScrollChild>

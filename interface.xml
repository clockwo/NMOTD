				    </ScrollFrame>
		        </Frames>
			</Frame>
		</Frames>

        <Frames> <!-- Button -->
        	<Button name="IconTest" text="Что нового?" inherits="MyFont">
				<Size x="400" y="64"/>
				<Anchors>
					<Anchor point="TOP"/>
				</Anchors>
				<Layers>
				<Layer level="Texture">
				<Texture name="$topheader"
					file="Interface\AddOns\NMOTD\images\ramka" setAllPoints="true"/>
				</Layer>
				</Layers>
			</Button>


			<Button name="$parentClose" text="   Закрыть   " inherits="UIPanelButtonTemplate">
				<Size>
					<AbsDimension x="128" y='24' />
				</Size>
				<Anchors>
					<Anchor point="BOTTOM">
						<Offset>
							<AbsDimension x="0" y="25" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						self:GetParent():Hide()
					</OnClick>
